<!-- Validation failure messages -->
<% if @user.errors.any? %>
  <% @user.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add User</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_user" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for email -->
      <div class="form-group">
        <label for="email" class="control-label">
          Email
        </label>

        <input type="text" id="email" name="email" placeholder="Email" class="form-control" value="<%= @user.email %>">
      </div>

      <!-- Label and input for fullness_score -->
      <div class="form-group">
        <label for="fullness_score" class="control-label">
          Fullness score
        </label>

        <input type="text" id="fullness_score" name="fullness_score" placeholder="Fullness score" class="form-control" value="<%= @user.fullness_score %>">
      </div>

      <!-- Label and input for description -->
      <div class="form-group">
        <label for="description" class="control-label">
          Description
        </label>

        <textarea id="description" name="description" placeholder="Description" class="form-control" rows="3"><%= @user.description %></textarea>
      </div>

      <!-- Label and input for daily_record_id -->
      <div class="form-group">
        <label for="daily_record_id" class="control-label">
          Date
        </label>

        <input type="text" id="date" name="date" placeholder="<%= Date.today %>" class="form-control" value="<%= Date.today %>">
      </div>

      <button class="btn btn-success">
        Create Meal
      </button>
      or
      <a href="/meals">Cancel</a>
    </form>
  </div>
</div>
