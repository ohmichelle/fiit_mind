<div class="page-header">
  <h1>Track</h1>
</div>

<!-- Set Date for Page -->
<div class="row">
  <div class="col-md-12">
    <h2>Choose Date</h2>
    <form action"/create_daily_record/day" class="form-inline">

      <!-- Label and input for date/calendar datepicker -->
      <div class="form-group">
        <label for="date" class="control-label">Choose Date</label>

        <div class="input-group date" id='datepicker' data-date-format="yyyy-mm-dd">
         <input type="text" id="date" name="date" placeholder="Master Date Here" class="form-control" value="<%= params[:date] %>">
         <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
        </div>

        <script type="text/javascript">
          $(function () {
            $('#datepicker').datepicker({todayBtn: "linked"});
            })
        </script>
      </div>

      <!-- Submit button -->
      <button class="btn btn-success">
        Set Date
      </button>
    </form>
  </div>
</div>

<!-- Set Weight -->
<div class="row">
  <div class="col-md-12">

    <!-- Set Date for Entire Page -->
    <form action="/update_daily_record/<%= DailyRecord.find_by(:date => Date.today, :user_id => current_user.id).id %>" method="post" class="form-inline">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for user_id -->
      <div class="form-group">
        <input type="hidden" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= current_user.id %>">
      </div>

      <!-- Label and input for master date -->
      <div class="form-group">
        <input type="text" id="date" name="date" placeholder="Date" class="form-control" value="<%= params[:date] %>">
      </div>

      <!-- Label and input for weight -->
      <div class="form-group">
        <label for="weight" class="control-label">
          Weight
        </label>

        <input type="text" id="weight" name="weight" placeholder="Weight" class="form-control" value="<%= @daily_record.weight %>">
      </div>

      <button class="btn btn-success">
        Set Weight
      </button>
      or
      <a href="/daily_records">Cancel</a>

    </form>
  </div>
</div>
<hr>

<!-- Add Meals -->
<div class="row">
  <div class="col-md-12">
    <form action="/create_meal" method="post" class="form-inline">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for date -->
      <div class="form-group">
        <label for="date" class="control-label">Date</label>
        <input type="text" id="date" name="date" placeholder="<%= params[:date] %>" class="form-control" value="<%= @date %>">
      </div>

      <!-- Label and input for meal number/position -->
      <div class="form-group">
        <label for="position" class="control-label">Position</label>
          <input type="text" id="position" name="position" placeholder="Position" class="form-control" value="<%= @meal.position %>">
      </div>

      <!-- Label and input for fullness_score -->
      <div class="form-group">
        <label for="fullness_score" class="control-label">Fullness score</label>
          <input type="text" id="fullness_score" name="fullness_score" placeholder="Fullness score" class="form-control" value="<%= @meal.fullness_score %>">
      </div>

      <!-- Label and input for description -->
      <div class="form-group">
        <label for="description" class="control-label">Description</label>
          <input type="text" id="description" name="description" placeholder="Description" class="form-control" value="<%= @meal.description %>">
      </div>

      <button class="btn btn-success">
        Add Meal
      </button>
      or
      <a href="/meals">Cancel</a>
    </form>
  </div>
</div>

<hr>

<!-- Display Meals -->
<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Meal ID</th>
        <th>User</th>
        <th>Position</th>
        <th>Fullness score</th>
        <th>Description</th>
        <th>Daily record</th>
        <th>Actions</th>
      </tr>

      <% @meals.each do |meal| %>
      <tr>
        <td><%= meal.id %></td>
        <td><%= meal.daily_record.user_id %></td>
        <td><%= meal.position %></td>
        <td><%= meal.fullness_score %></td>
        <td><%= meal.description %></td>
        <td><%= meal.daily_record.date %></td>
        <td>
          <a href="/meals/<%= meal.id %>" class="btn btn-primary">Show</a>
          <a href="/meals/<%= meal.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_meal/<%= meal.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>


<hr>
<!-- Display Daily Record -->
<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Daily Record ID</th>
        <th>User</th>
        <th>Date</th>
        <th>Weight</th>
        <th>Average fullness</th>
        <th>Weight loss probability</th>
        <th>Actions</th>
      </tr>

      <% @daily_records.each do |daily_record| %>
      <tr>
        <td><%= daily_record.id %></td>
        <td><%= daily_record.user.username %></td>
        <td><%= daily_record.date %></td>
        <td><%= daily_record.weight %></td>
        <td><%= daily_record.average_fullness %></td>
        <td><%= daily_record.weight_loss_probability %></td>
        <td>
          <a href="/daily_records/<%= daily_record.id %>" class="btn btn-primary">Show</a>
          <a href="/daily_records/<%= daily_record.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_daily_record/<%= daily_record.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
