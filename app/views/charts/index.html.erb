<h1>Charts</h1>

<div class="row">
  <div class="col-md-12">
    <div class="btn-group btn-group-justified" role="group" aria-label="...">
      <div class="btn-group" role="group">
        <a href="/charts/weight" class="btn btn-primary">Weight</a>
      </div>
      <div class="btn-group" role="group">
        <a href="/charts/fullness" class="btn btn-warning">Fullness</a>
      </div>
      <div class="btn-group" role="group">
        <a href="/charts/model_history" class="btn btn-danger">Model History</a>
      </div>
    </div>
<hr>

<!-- Line Chart: Daily Weight over time by user -->
<h2>Weight</h2>
<%= line_chart @daily_records.group(:date).average(:weight) %>

<h2>Fullness</h2>
<%= line_chart @daily_records.group(:date).average(:average_fullness) %>

<h2>Model History: Weight Loss Probability</h2>
<%= line_chart @daily_records.group(:date).average(:weight_loss_probability) %>




