<h1><strong>Charts</strong></h1>
<hr>

<div class="row">
  <div class="col-md-12">
    <div class="btn-group btn-group-justified" role="group" aria-label="...">
      <div class="btn-group" role="group">
        <a href="/charts/weight" class="btn btn-primary">Weight</a>
      </div>
      <div class="btn-group" role="group">
        <a href="/charts/fullness" class="btn btn-warning">Fullness</a>
      </div>
      <div class="btn-group" role="group">
        <a href="/charts/model_history" class="btn btn-danger">Model History</a>
      </div>
    </div>
<hr>

<h2>Fullness</h2>
<%= line_chart @daily_records.group(:date).average(:average_fullness) %>

<!-- Display Meal Record -->
<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Date</th>
        <th>Meal #</th>
        <th>Fullness score</th>
        <th>Description</th>
        <th>Actions</th>
      </tr>

      <% @meals.each do |meal| %>
      <tr>
        <td><%= meal.daily_record.date %></td>
        <td><%= meal.position %></td>
        <td><%= meal.fullness_score %></td>
        <td><%= meal.description %></td>
        <td>
          <a href="/meals/<%= meal.id %>/edit" class="btn btn-warning"><i class="fa fa-pencil"></a></i>
          <a href="/delete_meal/<%= meal.id %>" class="btn btn-danger" rel="nofollow"><i class="fa fa-trash"></a></i>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
